generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}


model User {
  id                Int    @id @default(autoincrement())
  name              String
  email             String    @unique
  session           Session[]
  password          String
  role              String      @default("USER")
  @@map("user")
}

model Session {
  id                Int    @id @default(autoincrement())
  user_id           Int
  expiresAt         DateTime
  active_expires    BigInt
  user              User   @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
  @@map("session")
}
